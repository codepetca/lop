{
	"name": "lop",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run kill-ports && npm run dev:party & npm run dev:sveltekit",
		"dev:clean": "npm run kill-ports && npm run dev",
		"kill-ports": "lsof -ti:1999 | xargs kill -9 2>/dev/null || true; lsof -ti:5173 | xargs kill -9 2>/dev/null || true; lsof -ti:5174 | xargs kill -9 2>/dev/null || true",
		"dev:party": "partykit dev --port 1999",
		"dev:sveltekit": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"party:deploy": "partykit deploy",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest --coverage"
	},
	"devDependencies": {
		"@sveltejs/adapter-netlify": "^5.0.2",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/svelte": "^5.2.8",
		"@types/node": "^24.0.14",
		"@vitest/ui": "^3.2.4",
		"jsdom": "^26.1.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@types/uuid": "^10.0.0",
		"partykit": "^0.0.115",
		"partysocket": "^1.1.4",
		"uuid": "^11.1.0",
		"zod": "^4.0.5"
	}
}
